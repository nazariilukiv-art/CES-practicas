<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Este layout usa un VBox y un GridPane para organizar los campos de edición -->
<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.folmurario.controller.DetalleUsuarioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Detalle de Usuario">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="ID:" GridPane.rowIndex="0" />
                <Label fx:id="labelId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>

                <Label text="Nombre:" GridPane.rowIndex="1" />
                <TextField fx:id="texfieldNombre" promptText="Nombre de usuario" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Correo:" GridPane.rowIndex="2" />
                <TextField fx:id="textfieldCorreo" promptText="Correo electrónico" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Localización:" GridPane.rowIndex="3" />
                <TextField fx:id="textfieldLocalizacion" promptText="Localización" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Edad:" GridPane.rowIndex="4" />
                <ComboBox fx:id="comboEdad" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Género:" GridPane.rowIndex="5" />
                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <children>
                        <RadioButton fx:id="radioMasculino" mnemonicParsing="false" text="Masculino" />
                        <RadioButton fx:id="radioFemenino" mnemonicParsing="false" text="Femenino" />
                    </children>
                </HBox>

                <Label text="Disponibilidad:" GridPane.rowIndex="6" />
                <CheckBox fx:id="checkDisponibilidad" mnemonicParsing="false" text="Disponible" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="botonModificar" mnemonicParsing="false" onAction="#onModificarClick" text="Modificar" />
                <Button fx:id="botonCerrar" mnemonicParsing="false" onAction="#onCerrarClick" text="Cerrar" />
            </children>
        </HBox>
    </children>
</VBox>