<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/login"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <EditText
        android:id="@+id/edit_text_correo"
        android:drawableStart="@drawable/mail"
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:hint="Introduce Correo"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <EditText
        android:id="@+id/edit_text_pass"
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/passwd"
        android:gravity="center"
        android:hint="Introduce password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_correo" />

    <Spinner
        android:entries="@array/plataformas"
        android:id="@+id/spiner_plataformas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_pass"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pass" />

    <CheckBox
        android:text="Recordar ContraseÃ±a"
        android:layout_marginTop="16dp"
        android:id="@+id/checkbox_recordar_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/spiner_plataformas"
        app:layout_constraintTop_toBottomOf="@+id/spiner_plataformas">

    </CheckBox>

    <ImageButton
        android:layout_marginTop="24dp"
        android:id="@+id/imagen_google"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/google"
        app:layout_constraintStart_toStartOf="@+id/edit_text_pass"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_recordar_contrasena">

    </ImageButton>

    <ImageButton
        android:id="@+id/imagen_git"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/gith"
        app:layout_constraintEnd_toStartOf="@+id/imagen_facebook"
        app:layout_constraintStart_toEndOf="@+id/imagen_google"
        app:layout_constraintTop_toTopOf="@+id/imagen_google">

    </ImageButton>

    <ImageButton
        android:id="@+id/imagen_facebook"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook"
        app:layout_constraintEnd_toEndOf="@+id/checkbox_recordar_contrasena"
        app:layout_constraintTop_toTopOf="@+id/imagen_google">

    </ImageButton>

    <Button
        android:id="@+id/boton_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagen_facebook"
        app:layout_constraintStart_toStartOf="@+id/imagen_google"
        app:layout_constraintTop_toBottomOf="@+id/imagen_git">

    </Button>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>